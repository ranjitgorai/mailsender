<!DOCTYPE html>
<html>
  <head>
    <title></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
  </head>
<body>
  <div class="container">
    <form class="form-horizontal">
    <div class="form-group">
      <label class="control-label col-sm-2" for="email">Email:</label>
      <div class="col-sm-4">
        <input type="email" class="form-control" id="email" placeholder="Enter email">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" >Subject:</label>
      <div class="col-sm-4">          
        <input type="text" class="form-control" id="subject" placeholder="Enter email subject">
      </div>
    </div>

    <div class="form-group">        
     
      <div class="col-sm-offset-2 col-sm-4">
      <textarea class="form-control" rows="5" id="comment"></textarea>
      </div>
    </div>
    
    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default" id="submit-btn">Submit</button>
      </div>
    </div>
  </form>
  	<p id="demo"></p>
  </div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script type="text/javascript" src="/javascripts/bootstrap.min.js"></script>


<script type="text/javascript">
	$('#submit-btn').click(function(e){
            e.preventDefault();
             var data ={
             	email : $('#email').val(),
             	subject : $('#subject').val(),
             	comment : $('#comment').val()

             };
               
            
              //console.log(data);
          $.ajax({

            url : '/mailsender',
            type: 'post',
             data : data,
            success : function(result){          
                  if(!result.error)
                    {
                        $('#demo').html(result.result);
                       //window.location.href = "/quizeapp/quizepage/"+result;

                    }
                    else{
                      alert("error.");
                    }
                    //window.location.reload();
            }
          });   
      });
</script>
</body>
</html>